<AnnouncementWidget@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    padding: "12dp"
    spacing: "6dp"
    height: self.minimum_height

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # White background
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
        Color:
            rgba: 0, 0, 0, 0.1  # Light grey border
        Line:
            width: 1
            rounded_rectangle: (*self.pos, *self.size, 10)

    # Header row with title and tag
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: "40dp"
        spacing: "10dp"
        
        Label:
            id: title_label
            text: ""
            font_size: "30dp"
            bold: True
            color: 0, 0, 0, 1
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'
            size_hint_x: 0.9
            
        Label:
            id: tag_label
            text: ""
            font_size: "15dp"
            color: 0.2, 0.2, 0.2, 1
            size_hint_x: 0.1
            text_size: self.width, None
            halign: 'center'
            text_align: 'center'
            valign: 'middle'
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]

    Label:
        id: description_label
        text: ""
        font_size: "18dp"
        color: 0.2, 0.2, 0.2, 1
        size_hint_y: None
        text_size: self.width, None
        halign: 'left'
        valign: 'top'
        height: self.texture_size[1]

    # Origin label with distinctive styling
    Label:
        id: origin_label
        text: ""
        font_size: "12dp"
        color: 0.4, 0.4, 0.8, 1  # Blue-ish color to make it stand out
        size_hint_y: None
        text_size: self.width, None
        halign: 'left'
        valign: 'top'
        height: self.texture_size[1]
        bold: True  # Make it bold to be more noticeable
        padding: 0, 5, 0, 5  # Add some padding

    Label:
        id: date_label
        text: ""
        font_size: "12dp"
        color: 0, 0, 0, 1
        size_hint_y: None
        size_hint_x: 1
        text_size: self.width, None
        halign: 'left'
        valign: 'top'
        height: self.texture_size[1]

<AnnouncementScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Whole background white
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'School Announcements'
            font_size: "40dp"
            bold: True
            size_hint_y: None
            height: 70
            padding: 20, 50, 20, 50
            color: 0, 0, 0, 1
            size_hint: 1, 0.1

        ScrollView:
            BoxLayout:
                id: announcement_layout
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

        Button:
            text: 'Add Announcement'
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0.9, 0.3, 0.3, 0
            color: 1, 1, 1, 1
            font_size: "24dp"
            bold: True
            canvas.before:
                Color:
                    rgba: 0.9, 0.3, 0.3, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
            on_press: app.show_add_announcement_screen()

<AddAnnouncementScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "10dp"
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Button:
            text: 'Send Announcement'
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            background_normal: ''
            background_color: 0.2, 0.7, 0.3, 0
            color: 1, 1, 1, 1
            font_size: "20dp"
            bold: True
            canvas.before:
                Color:
                    rgba: 0.2, 0.7, 0.3, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
            on_press: app.send_announcement()
        
        Button:
            text: 'Go Back'
            size_hint: None, None
            size: "200dp", "50dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            background_normal: ''
            background_color: 0.9, 0.3, 0.3, 0
            color: 1, 1, 1, 1
            font_size: "20dp"
            bold: True
            canvas.before:
                Color:
                    rgba: 0.9, 0.3, 0.3, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
            on_press: app.show_announcement_screen()

